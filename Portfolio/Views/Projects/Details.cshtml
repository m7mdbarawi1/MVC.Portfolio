@model Portfolio.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 700px;">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Project Title</dt>
            <dd class="col-sm-8">@Model.ProjectTitle</dd>

            <dt class="col-sm-4 fw-semibold">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4 fw-semibold">Cover Image</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="Cover" class="img-thumbnail" style="max-width: 150px;">
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">Category</dt>
            <dd class="col-sm-8">@Model.ProjectCategory?.CategoryDesc</dd>

            <dt class="col-sm-4 fw-semibold">User</dt>
            <dd class="col-sm-8">@Model.User?.UserName</dd>
        </dl>
    </div>
</div>
