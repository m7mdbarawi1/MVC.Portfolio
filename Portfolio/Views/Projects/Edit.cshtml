@model Portfolio.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title text-gradient mb-2">@ViewData["Title"]</h1>
        <p class="text-muted">Update the project details below.</p>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 700px;">
        <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ProjectId" />

            <!-- User Selection -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select glass-input" asp-items="ViewBag.UserId">
                    <option value="">Select User</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- Project Category -->
            <div class="mb-3">
                <label asp-for="ProjectCategoryId" class="form-label fw-semibold"></label>
                <select asp-for="ProjectCategoryId" class="form-select glass-input" asp-items="ViewBag.ProjectCategoryId">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="ProjectCategoryId" class="text-danger small"></span>
            </div>

            <!-- Project Title -->
            <div class="mb-3">
                <label asp-for="ProjectTitle" class="form-label fw-semibold"></label>
                <input asp-for="ProjectTitle" class="form-control glass-input" placeholder="Enter project title" />
                <span asp-validation-for="ProjectTitle" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control glass-input" rows="3" placeholder="Enter project description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Cover Image -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Upload Cover Image</label>
                <input type="file" name="coverImage" class="form-control" />
                @if (!string.IsNullOrEmpty(Model?.CoverImageUrl))
                {
                    <div class="mt-3">
                        <p class="small mb-1">Current Image:</p>
                        <img src="@Model.CoverImageUrl" alt="Cover Preview" class="img-thumbnail rounded-4 shadow-sm" style="width:150px; height:150px; object-fit:cover;">
                    </div>
                }
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>

            <!-- Centered Save Button -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-glass-primary px-5 d-flex align-items-center">
                    <i class="bi bi-save me-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
