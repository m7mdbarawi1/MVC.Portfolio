@model Portfolio.Models.Project

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-lg mx-auto" style="max-width: 700px;">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ProjectId" />

            <!-- User -->
            <div class="mb-4">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select glass-input" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- Category -->
            <div class="mb-4">
                <label asp-for="ProjectCategoryId" class="form-label fw-semibold"></label>
                <select asp-for="ProjectCategoryId" class="form-select glass-input" asp-items="ViewBag.ProjectCategoryId"></select>
                <span asp-validation-for="ProjectCategoryId" class="text-danger small"></span>
            </div>

            <!-- Title -->
            <div class="mb-4">
                <label asp-for="ProjectTitle" class="form-label fw-semibold"></label>
                <input asp-for="ProjectTitle" class="form-control glass-input" placeholder="Enter project title" />
                <span asp-validation-for="ProjectTitle" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-4">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control glass-input" rows="3" placeholder="Enter project description"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- Cover Image -->
            <div class="mb-4">
                <label asp-for="CoverImageUrl" class="form-label fw-semibold"></label>
                <input asp-for="CoverImageUrl" class="form-control glass-input" placeholder="Paste cover image URL" />
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-gradient rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-save me-2"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4 py-2">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
