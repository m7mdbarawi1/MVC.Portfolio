@model Portfolio.Models.News

@{
    ViewData["Title"] = "Create News";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title text-gradient mb-2">@ViewData["Title"]</h1>
        <p class="text-muted">Fill in the form below to create a news item.</p>
    </div>

    <!-- Create Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 600px;">
        <form asp-action="Create" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- User -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- News Title -->
            <div class="mb-3">
                <label asp-for="NewsTitle" class="form-label fw-semibold"></label>
                <input asp-for="NewsTitle" class="form-control" placeholder="Enter news title" />
                <span asp-validation-for="NewsTitle" class="text-danger small"></span>
            </div>

            <!-- News Description -->
            <div class="mb-3">
                <label asp-for="NewsDescription" class="form-label fw-semibold"></label>
                <textarea asp-for="NewsDescription" class="form-control" rows="3" placeholder="Enter news description"></textarea>
                <span asp-validation-for="NewsDescription" class="text-danger small"></span>
            </div>

            <!-- News Date -->
            <div class="mb-3">
                <label asp-for="NewsDate" class="form-label fw-semibold"></label>
                <input asp-for="NewsDate" type="date" class="form-control" />
                <span asp-validation-for="NewsDate" class="text-danger small"></span>
            </div>

            <!-- Cover Image Upload -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Cover Image</label>
                <input type="file" name="coverImage" class="form-control" accept="image/*" />
            </div>

            <!-- Centered Create Button -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-glass-primary px-5 d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
