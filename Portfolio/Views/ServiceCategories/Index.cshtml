@model IEnumerable<Portfolio.Models.ServiceCategory>

@{
    ViewData["Title"] = "Service Categories";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
            <a asp-action="Create" class="btn btn-glass-accent">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-glass shadow-glass">
                <div class="card-body">
                    <input type="text" id="searchInput" class="form-control form-control-glass" placeholder="Search Categories...">
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Table -->
    <div class="row">
        <div class="col-12">
            <div class="card card-glass shadow-glass">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0 table-glass">
                            <thead class="table-primary">
                                <tr>
                                    <th>Category Description</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="categoriesTable">
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="table-row-hover">
                                            <td>@item.CategoryDesc</td>
                                            <td class="text-center">
                                                <div class="table-actions-wrapper">
                                                    <a asp-action="Edit" asp-route-id="@item.ServiceCategoryId" class="btn btn-glass btn-sm">
                                                        <i class="bi bi-pencil-square"></i> Edit
                                                    </a>
                                                    <a asp-action="Details" asp-route-id="@item.ServiceCategoryId" class="btn btn-glass-accent btn-sm">
                                                        <i class="bi bi-info-circle"></i> Details
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.ServiceCategoryId" class="btn btn-glass-danger btn-sm">
                                                        <i class="bi bi-trash"></i> Delete
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="2" class="text-center text-muted">No Categories Found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const rows = document.querySelectorAll("#categoriesTable tr");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(term) ? "" : "none";
                });
            });
        });
    </script>
}