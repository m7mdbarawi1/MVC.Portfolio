@model Portfolio.Models.ServiceCategory

@{
    ViewData["Title"] = "Service Category Details";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 600px;">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Category Description</dt>
            <dd class="col-sm-8">@Model.CategoryDesc</dd>
        </dl>
    </div>
</div>
