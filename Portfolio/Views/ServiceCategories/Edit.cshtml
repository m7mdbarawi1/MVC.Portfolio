@model Portfolio.Models.ServiceCategory

@{
    ViewData["Title"] = "Edit Service Category";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-lg mx-auto" style="max-width: 600px;">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ServiceCategoryId" />

            <div class="mb-4">
                <label asp-for="CategoryDesc" class="form-label fw-semibold"></label>
                <input asp-for="CategoryDesc" class="form-control glass-input" placeholder="Enter category description" />
                <span asp-validation-for="CategoryDesc" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-gradient rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-save me-2"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4 py-2">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
