@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card card-glass p-4 shadow-glass hover-lift">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-gradient">Forgot Password</h2>
                    <p class="text-secondary">Enter your email to receive a password reset link</p>
                </div>

                <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <input type="email" name="email" placeholder="Enter your email" required class="form-control form-control-glass" />
                        <div class="invalid-feedback">
                            Please enter a valid email address.
                        </div>
                    </div>

                    <button type="submit" class="btn btn-glass-accent w-100 rounded-pill mt-3">
                        Send Reset Link
                    </button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center" role="alert">
                        @ViewBag.Error
                    </div>
                }

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3 text-center" role="alert">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Bootstrap client-side validation
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
