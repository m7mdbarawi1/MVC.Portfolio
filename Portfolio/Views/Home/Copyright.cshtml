@{
    ViewData["Title"] = "Copyright";
    Layout = "_Layout"; // Use your main layout
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-center">
            <h1 class="page-title text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Copyright Content Card -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card card-glass shadow-glass p-4">
                <h4 class="mb-3">Copyright Notice</h4>
                <p>
                    &copy; @DateTime.Now.Year Your Company Name. All rights reserved.
                </p>

                <h4 class="mt-4 mb-3">Terms of Use</h4>
                <p>
                    All content, images, and code on this website are protected by copyright laws. Unauthorized use, reproduction, or distribution is strictly prohibited.
                </p>

                <h4 class="mt-4 mb-3">Contact</h4>
                <p>
                    For copyright inquiries, please contact:
                    <a href="mailto:info@yourcompany.com" class="text-gradient-link">info@yourcompany.com</a>
                </p>

                <div class="mt-4 text-center">
                    <a asp-action="Index" class="btn btn-glass-accent">
                        <i class="bi bi-arrow-left-circle"></i> Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Optional JS for this page
        console.log("Copyright page loaded with glassmorphism theme.");
    </script>
}
