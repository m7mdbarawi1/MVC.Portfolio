@model Portfolio.Models.ProjectCategory

@{
    ViewData["Title"] = "Delete Project Category";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title text-gradient">@ViewData["Title"]</h1>
            <p class="text-muted">Are you sure you want to delete this category?</p>
        </div>
    </div>

    <!-- Category Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 600px;">
        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold">Category Description</dt>
            <dd class="col-sm-8">@Model.CategoryDesc</dd>
        </dl>

        <!-- Delete Form -->
        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="ProjectCategoryId" />
            <input type="submit" value="Delete" class="btn btn-glass-danger px-4" />
            <a asp-action="Index" class="btn btn-outline-light px-4">Back to List</a>
        </form>
    </div>
</div>
