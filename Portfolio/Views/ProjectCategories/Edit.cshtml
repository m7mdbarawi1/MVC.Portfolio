@model Portfolio.Models.ProjectCategory

@{
    ViewData["Title"] = "Edit Project Category";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title text-gradient mb-2">@ViewData["Title"]</h1>
        <p class="text-muted">Update the category details below.</p>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 500px;">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ProjectCategoryId" />

            <!-- Category Description -->
            <div class="mb-3">
                <label asp-for="CategoryDesc" class="form-label fw-semibold"></label>
                <input asp-for="CategoryDesc" class="form-control" placeholder="Enter category description" />
                <span asp-validation-for="CategoryDesc" class="text-danger small"></span>
            </div>

            <!-- Centered Save Button -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-glass-primary px-5 d-flex align-items-center">
                    <i class="bi bi-save me-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
