@model IEnumerable<Portfolio.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="page-title text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-glass shadow-glass">
                <div class="card-body">
                    <input type="text" id="searchInput" class="form-control form-control-glass" placeholder="Search Services...">
                </div>
            </div>
        </div>
    </div>

    <!-- Services as Cards -->
    <div class="row g-4" id="servicesContainer">
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 service-card">
                    <div class="card card-glass shadow-glass h-100 hover-lift position-relative"
                         style="cursor: pointer;"
                         onclick="window.location='@Url.Action("Details", "Services", new { id = item.ServiceId })'">

                        @if (!string.IsNullOrEmpty(item.CoverImageUrl))
                        {
                            <img src="@item.CoverImageUrl"
                                 class="card-img-top img-fluid rounded-top"
                                 alt="@item.ServiceTitle"
                                 style="height: 180px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient d-flex align-items-center justify-content-center"
                                 style="height: 180px; border-radius: 1rem 1rem 0 0;">
                                <i class="bi bi-image text-white-50 fs-1"></i>
                            </div>
                        }

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-gradient">@item.ServiceTitle</h5>
                            <p class="card-text text-muted small flex-grow-1">@item.Description</p>
                            <div class="mt-2">
                                <p class="mb-1"><strong>Category:</strong> @(item.ServiceCategory?.CategoryDesc ?? "N/A")</p>
                                <p class="mb-1"><strong>User:</strong> @(item.User?.UserName ?? "N/A")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted">
                <p>No Services Found</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const searchInput = document.getElementById("searchInput");
            const cards = document.querySelectorAll(".service-card");

            searchInput.addEventListener("input", function () {
                const term = searchInput.value.toLowerCase();
                cards.forEach(card => {
                    const text = card.textContent.toLowerCase();
                    card.style.display = text.includes(term) ? "" : "none";
                });
            });
        });
    </script>
}
