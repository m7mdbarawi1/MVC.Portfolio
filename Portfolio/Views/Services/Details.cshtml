@model Portfolio.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-glass-accent">
                    <i class="bi bi-pencil-square me-2"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left-circle me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <!-- Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 700px;">
        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold">Service Title</dt>
            <dd class="col-sm-9">@Model.ServiceTitle</dd>

            <dt class="col-sm-3 fw-semibold">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3 fw-semibold">Cover Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="Cover Image" class="img-thumbnail rounded-3" style="max-width: 150px; object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-3 fw-semibold">Category</dt>
            <dd class="col-sm-9">@Model.ServiceCategory?.CategoryDesc</dd>

            <dt class="col-sm-3 fw-semibold">User</dt>
            <dd class="col-sm-9">@Model.User?.UserName</dd>
        </dl>
    </div>
</div>
