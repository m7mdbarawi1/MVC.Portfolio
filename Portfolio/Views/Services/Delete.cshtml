@model Portfolio.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="page-title text-gradient">@ViewData["Title"]</h1>
            <p class="text-muted">Are you sure you want to delete this service?</p>
        </div>
    </div>

    <!-- Service Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 700px;">
        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold">Service Title</dt>
            <dd class="col-sm-8">@Model.ServiceTitle</dd>

            <dt class="col-sm-4 fw-semibold">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4 fw-semibold">Cover Image</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="Cover" class="img-thumbnail rounded-3" style="max-width: 150px; object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">Category</dt>
            <dd class="col-sm-8">@Model.ServiceCategory?.CategoryDesc</dd>

            <dt class="col-sm-4 fw-semibold">User</dt>
            <dd class="col-sm-8">@Model.User?.UserName</dd>
        </dl>

        <!-- Delete Form -->
        <form asp-action="Delete" class="d-flex gap-2">
            <input type="hidden" asp-for="ServiceId" />
            <input type="submit" value="Delete" class="btn btn-glass-danger px-4" />
            <a asp-action="Index" class="btn btn-outline-light px-4">Back to List</a>
        </form>
    </div>
</div>
