@model Portfolio.Models.Service

@{
    ViewData["Title"] = "Create Service";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title text-gradient mb-2">@ViewData["Title"]</h1>
        <p class="text-muted">Fill in the form below to create a new service.</p>
    </div>

    <!-- Create Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 600px;">
        <form asp-action="Create" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- User -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- Category -->
            <div class="mb-3">
                <label asp-for="ServiceCategoryId" class="form-label fw-semibold"></label>
                <select asp-for="ServiceCategoryId" class="form-select" asp-items="ViewBag.ServiceCategoryId">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="ServiceCategoryId" class="text-danger small"></span>
            </div>

            <!-- Title -->
            <div class="mb-3">
                <label asp-for="ServiceTitle" class="form-label fw-semibold"></label>
                <input asp-for="ServiceTitle" class="form-control" placeholder="Enter service title" />
                <span asp-validation-for="ServiceTitle" class="text-danger small"></span>
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe the service"></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <!-- File upload -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Upload Cover Image</label>
                <input type="file" name="coverImage" class="form-control" accept="image/*" />
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-center gap-3 mt-4">
                <button type="submit" class="btn btn-glass-primary px-4 d-flex align-items-center">
                    <i class="bi bi-plus-circle me-2"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
