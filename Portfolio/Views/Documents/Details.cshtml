@model Portfolio.Models.Document

@{
    ViewData["Title"] = "Document Details";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Document Details Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 700px;">
        <dl class="row mb-0">
            <dt class="col-sm-4 fw-semibold">Document Title</dt>
            <dd class="col-sm-8">@Model.DocumentTitle</dd>

            <dt class="col-sm-4 fw-semibold">Cover Image</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <img src="@Model.CoverImageUrl" alt="Cover" class="img-thumbnail rounded-3" style="max-width: 150px; object-fit: cover;" />
                }
                else
                {
                    <span class="text-muted">No Image</span>
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">Document URL</dt>
            <dd class="col-sm-8">
                @if (!string.IsNullOrEmpty(Model.DocumentUrl))
                {
                    <a href="@Model.DocumentUrl" target="_blank" class="link-gradient text-decoration-none">@Model.DocumentUrl</a>

                    <!-- ✅ Added Download Button -->
                    <div class="mt-3">
                        <a asp-action="Download" asp-route-id="@Model.DocumentId" class="btn btn-primary">
                            Download
                        </a>
                    </div>
                }
                else
                {
                    <span class="text-muted">N/A</span>
                }
            </dd>

            <dt class="col-sm-4 fw-semibold">User</dt>
            <dd class="col-sm-8">@Model.User?.UserName</dd>
        </dl>
    </div>
</div>
