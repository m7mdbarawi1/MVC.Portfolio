@model Portfolio.Models.Document

@{
    ViewData["Title"] = "Edit Document";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12 d-flex flex-column flex-md-row justify-content-between align-items-md-center">
            <h1 class="page-title mb-3 mb-md-0 text-gradient">@ViewData["Title"]</h1>
        </div>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 500px;">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="DocumentId" />

            <!-- User Selection -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select glass-input" asp-items="ViewBag.UserId">
                    <option value="">Select User</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- Document Title -->
            <div class="mb-3">
                <label asp-for="DocumentTitle" class="form-label fw-semibold"></label>
                <input asp-for="DocumentTitle" class="form-control glass-input" placeholder="Enter document title" />
                <span asp-validation-for="DocumentTitle" class="text-danger small"></span>
            </div>

            <!-- Cover Image URL -->
            <div class="mb-3">
                <label asp-for="CoverImageUrl" class="form-label fw-semibold"></label>
                <input asp-for="CoverImageUrl" class="form-control glass-input" placeholder="Enter cover image URL" />
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>

            <!-- Document URL -->
            <div class="mb-3">
                <label asp-for="DocumentUrl" class="form-label fw-semibold"></label>
                <input asp-for="DocumentUrl" class="form-control glass-input" placeholder="Enter document URL" />
                <span asp-validation-for="DocumentUrl" class="text-danger small"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-glass-accent rounded-pill px-4 py-2 shadow-sm">
                    <i class="bi bi-save me-2"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-outline-light rounded-pill px-4 py-2">
                    <i class="bi bi-x-circle me-2"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
