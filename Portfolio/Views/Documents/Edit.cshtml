@model Portfolio.Models.Document

@{
    ViewData["Title"] = "Edit Document";
}

<div class="container-fluid page-wrapper mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="page-title text-gradient mb-2">@ViewData["Title"]</h1>
        <p class="text-muted">Update the document details below.</p>
    </div>

    <!-- Edit Form Card -->
    <div class="glass-card p-4 rounded-4 shadow-glass mx-auto" style="max-width: 500px;">
        <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="DocumentId" />

            <!-- User Selection -->
            <div class="mb-3">
                <label asp-for="UserId" class="form-label fw-semibold"></label>
                <select asp-for="UserId" class="form-select glass-input" asp-items="ViewBag.UserId">
                    <option value="">Select User</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger small"></span>
            </div>

            <!-- Document Title -->
            <div class="mb-3">
                <label asp-for="DocumentTitle" class="form-label fw-semibold"></label>
                <input asp-for="DocumentTitle" class="form-control glass-input" placeholder="Enter document title" />
                <span asp-validation-for="DocumentTitle" class="text-danger small"></span>
            </div>

            <!-- Cover Image Upload -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Cover Image</label>
                @if (!string.IsNullOrEmpty(Model.CoverImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.CoverImageUrl" alt="Cover Image" class="img-fluid rounded shadow-sm" style="max-height: 150px;" />
                    </div>
                }
                <input type="file" name="coverImageFile" class="form-control glass-input" />
                <span asp-validation-for="CoverImageUrl" class="text-danger small"></span>
            </div>

            <!-- Existing Document Link -->
            @if (!string.IsNullOrEmpty(Model.DocumentUrl))
            {
                <div class="mb-3">
                    <label class="form-label fw-semibold">Current Document:</label>
                    <div>
                        <a href="@Model.DocumentUrl" target="_blank">View Document</a>
                    </div>
                </div>
            }

            <!-- Document File Upload -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Replace Document</label>
                <input type="file" name="documentFile" class="form-control glass-input" />
                <span asp-validation-for="DocumentUrl" class="text-danger small"></span>
            </div>

            <!-- Centered Save Button -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-glass-primary px-5 d-flex align-items-center">
                    <i class="bi bi-save me-2"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
